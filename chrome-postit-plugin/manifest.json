{
  "manifest_version": 3,
  "name": "Postit",
  "version": "0.1.0",
  "description": "Add sticky notes to any web page",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["postit.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "icon48.png",
    "default_title": "Postit - Pages with notes",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["store2.js", "postit-bridge.js", "postit.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
